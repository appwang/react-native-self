<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chekuanitem_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingTop="3dp" >

    <TextView
        android:id="@+id/alphaText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_g1"
        android:paddingBottom="5dp"
        android:paddingLeft="10dip"
        android:paddingTop="5dp"
        android:textColor="@color/color_com_b_1"
        android:textSize="@dimen/fontsize_s" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/choseCarAgeLine"
            android:layout_width="3dp"
            android:layout_height="fill_parent"
            android:background="@color/color_com_r_1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/brandNameIconFromItem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/friends_sends_pictures_no" />

        <TextView
            android:id="@+id/brandNameTextFromItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:minHeight="@dimen/find_choose_item_com_h"
            android:paddingLeft="@dimen/titlebar_padding_left"
            android:paddingRight="@dimen/titlebar_padding_right"
            android:textColor="@color/color_com_b_1"
            android:textSize="@dimen/fontsize_l" />
    </LinearLayout>

</LinearLayout>